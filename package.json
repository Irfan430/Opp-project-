{
  "name": "cybersecurity-risk-platform",
  "version": "1.0.0",
  "description": "AI-Powered Cybersecurity Risk Simulation Web Platform",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev": "docker-compose up -d",
    "dev:frontend": "cd frontend && npm start",
    "dev:backend": "cd backend && npm run dev",
    "dev:ml": "cd ml-service && python -m uvicorn main:app --reload --host 0.0.0.0 --port 8001",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm run build",
    "test": "npm run test:frontend && npm run test:backend",
    "test:frontend": "cd frontend && npm test",
    "test:backend": "cd backend && npm test",
    "install:all": "npm install && cd frontend && npm install && cd ../backend && npm install",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "seed": "cd backend && npm run seed",
    "migrate": "cd backend && npm run migrate"
  },
  "keywords": [
    "cybersecurity",
    "risk-simulation",
    "vulnerability-scanner",
    "ai-ml",
    "security-platform"
  ],
  "author": "Cybersecurity Platform Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}