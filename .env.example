# Environment Configuration
NODE_ENV=development

# Database Configuration
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=secure_password_123
MONGO_DATABASE=cybersec_platform

# Redis Configuration
REDIS_PASSWORD=redis_secure_password_456

# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_key_here
JWT_EXPIRES_IN=7d

# Frontend URLs
FRONTEND_URL=http://localhost:3000
REACT_APP_API_URL=http://localhost:5000/api
REACT_APP_WS_URL=ws://localhost:5000

# Payment Integration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# Alert Integrations
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url

# Email Configuration (for phishing simulation)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Security Scanner Configuration
NMAP_PATH=/usr/bin/nmap
NIKTO_PATH=/usr/bin/nikto

# ML Model Configuration
ML_MODEL_UPDATE_INTERVAL=24h
ML_TRAINING_DATA_PATH=/app/training_data

# Rate Limiting
RATE_LIMIT_WINDOW=15m
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=/app/logs

# Security Headers
CORS_ORIGIN=http://localhost:3000
SESSION_SECRET=your_session_secret_key

# File Upload Limits
MAX_FILE_SIZE=10MB
UPLOAD_PATH=/app/uploads

# Scan Limits
MAX_CONCURRENT_SCANS=5
SCAN_TIMEOUT=30m

# Notification Settings
ALERT_COOLDOWN=5m
CRITICAL_THRESHOLD=8.0

# Development Settings
DEBUG_MODE=false
API_DOCS_ENABLED=true