# Application Configuration
NODE_ENV=development
PORT=3000
API_PORT=3001
ML_SERVICE_URL=http://localhost:8001

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/cybersecurity_platform
MONGODB_TEST_URI=mongodb://localhost:27017/cybersecurity_platform_test

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_SECRET=your-refresh-token-secret
REFRESH_TOKEN_EXPIRES_IN=30d

# Encryption
ENCRYPTION_KEY=your-32-character-encryption-key-here

# Email Configuration (for notifications and phishing simulation)
EMAIL_SERVICE=gmail
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=no-reply@cybersecurity-platform.com

# Alert Integrations
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_CHAT_ID=your-telegram-chat-id
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Payment Integration
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret
PAYPAL_MODE=sandbox

# File Storage
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,txt,csv,json

# Security Scan Configuration
NMAP_PATH=/usr/bin/nmap
NIKTO_PATH=/usr/bin/nikto
SCAN_TIMEOUT=300000
MAX_CONCURRENT_SCANS=5

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Docker Configuration
DOCKER_NETWORK=cybersec_network

# AI/ML Configuration
ML_MODEL_PATH=./ml-service/models
PREDICTION_CONFIDENCE_THRESHOLD=0.8

# Frontend Configuration
REACT_APP_API_URL=http://localhost:3001/api
REACT_APP_SOCKET_URL=http://localhost:3001
REACT_APP_STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key

# Development
DEBUG=true
VERBOSE_LOGGING=true